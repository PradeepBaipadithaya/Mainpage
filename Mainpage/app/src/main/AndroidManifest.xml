            android:enabled="true"
            android:exported="true"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".conductor_location"
            android:exported="false" />
        <activity
            android:name=".ticket_collector_bus"
            android:exported="false" />
